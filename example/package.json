{
  "name": "LGCSample",
  "version": "1.0.0",
  "description": "load-gulp-config sample",
  "main": "scripts/index.js",
  "private": true,
  "scripts": {
    "postinstall": "bower cache clean && bower install && gulp vendors",
    "upgrade": "ncu -a --loglevel verbose --packageFile package.json && npm i",
    "start": "npm cache clean && npm i && npm run watch",
    "dev": "npm run watch",
    "watch": "npm run styles && gulp watch",
    "styles": "gulp styles",
    "test": "gulp test",
    "build": "gulp"
  },
  "appDirs": {
    "index": "./",
    "styles": "source/styles/",
    "fonts": "source/styles/fonts/",
    "scripts": "source/scripts/",
    "vendors": "source/scripts/vendors/",
    "images": "source/media/",
    "videos": "source/media/videos/",
    "sounds": "source/media/sounds/",
    "views": "source/views/",
    "source": "source/",
    "assets": "dist/",
    "tasks": "tasks/",
    "tests": "tests/"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "browser-sync": "^2.12.10",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-bump": "^2.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-csso": "^2.0.0",
    "gulp-git": "^1.7.2",
    "gulp-if": "^2.0.1",
    "gulp-imagemin": "^3.0.1",
    "gulp-jslint": "^1.0.1",
    "gulp-mocha": "^2.2.0",
    "gulp-notify": "^2.2.0",
    "gulp-preprocess": "^2.0.0",
    "gulp-prompt": "^0.2.0",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^2.3.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.3",
    "gulp-useref": "^3.1.0",
    "gulp-util": "^3.0.8",
    "imagemin-pngquant": "^5.0.0",
    "load-gulp-config": "^1.3.0",
    "node-sass-css-importer": "^0.0.3",
    "npm-check-updates": "^2.8.0",
    "preen": "^1.2.0",
    "run-sequence": "^1.2.1",
    "yargs": "^4.7.1"
  }
}
